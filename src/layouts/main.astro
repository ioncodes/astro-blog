---
import "../styles/global.css";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import ThemeScript from "@/components/ThemeScript.astro";
const { content } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <title>{content.title} | Layle's Lair</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content={content.summary} />
    <meta name="author" content={content.author} />
    {content.tags && <meta name="keywords" content={content.tags.join(", ")} />}

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={content.title} />
    <meta property="og:description" content={content.summary} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Layle's Lair" />
    <meta property="article:author" content={content.author} />
    <meta property="article:published_time" content={content.date} />
    {content.tags && content.tags.map((tag: string) => <meta property="article:tag" content={tag} />)}

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={content.title} />
    <meta name="twitter:description" content={content.summary} />
    <meta name="twitter:creator" content="@layle_ctf" />

    <ThemeScript />
  </head>
  <body>
    <Navbar />
    <div
      class="max-w-4xl mx-auto px-4 py-8 prose prose-a:text-violet-400 prose-a:hover:text-violet-300 prose-a:transition-colors prose-a:duration-200"
    >
      <h1 class="text-4xl font-bold mb-6">{content.title}</h1>
      <slot />
    </div>

    <Footer />
  </body>
</html>
