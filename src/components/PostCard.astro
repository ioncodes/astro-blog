---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";

export interface Props {
  post: any;
  isSticky?: boolean;
}

const { post, isSticky = false } = Astro.props;
---

<a href={post.url} class="block group">
  <Card
    className="transition-all duration-200 hover:shadow-lg hover:scale-[1.02] cursor-pointer relative"
  >
    {isSticky && (
      <div class="absolute top-3 right-3 text-yellow-600 text-lg">
        ðŸ“Œ
      </div>
    )}
    <CardHeader>
      <CardTitle
        className="group-hover:text-violet-600 transition-colors text-xl"
      >
        {post.frontmatter.title || "Untitled"}
      </CardTitle>
      {
        post.frontmatter.summary && (
          <CardDescription>{post.frontmatter.summary}</CardDescription>
        )
      }
      {
        post.frontmatter.date && (
          <CardDescription className="text-sm text-gray-500">
            {new Date(post.frontmatter.date).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })}
            Â· {post.frontmatter.author}
          </CardDescription>
        )
      }
      {
        post.frontmatter.tags && post.frontmatter.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-2">
            {post.frontmatter.tags.map((tag: string) => (
              <Badge variant="outline">{tag}</Badge>
            ))}
          </div>
        )
      }
    </CardHeader>
  </Card>
</a>
