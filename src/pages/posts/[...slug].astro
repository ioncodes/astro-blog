---
import { getCollection, render } from 'astro:content';
import "../../styles/global.css";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import ThemeScript from "@/components/ThemeScript.astro";

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{post.data.title} - Layle's Lair</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content={post.data.summary} />

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={post.data.title} />
    <meta property="og:description" content={post.data.summary} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Layle's Lair" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={post.data.title} />
    <meta name="twitter:description" content={post.data.summary} />
    <meta name="twitter:creator" content="@layle_ctf" />

    <ThemeScript />
  </head>

  <body>
    <Navbar />

    <div class="max-w-4xl mx-auto px-4 py-8 prose prose-a:text-violet-400 prose-a:hover:text-violet-300 prose-a:transition-colors prose-a:duration-200">
      <h1 class="text-4xl font-bold mb-6">{post.data.title}</h1>
      <Content />
    </div>

    <Footer />
  </body>
</html>